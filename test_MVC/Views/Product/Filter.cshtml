@model List<ProductModel>

<!DOCTYPE html>
<html>
<head>
    <title>Результаты поиска продуктов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 20px;
        }

        h1 {
            color: #007BFF;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007BFF;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Результаты поиска продуктов</h1>

    <table>
        <thead>
            <tr>
                <th>Наименование продукта</th>
                <th>Цена</th>
                <th>Описание</th>
                <th>Примечание общее</th>
                    @if (!User.IsInRole("user"))
    {
                <th>Примечание специальное</th>
    }
                <th>Категория</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.NoteGeneral</td>
                        @if (!User.IsInRole("user"))
    {
                    <td>@product.NoteSpecial</td>
    }
                    <td>@product.Category.Name</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index">Вернуться к списку продуктов</a>
</body>
</html>
